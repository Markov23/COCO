<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#08A6BE">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#08A6BE"
            android:src="@drawable/atras"
            android:paddingStart="10dp"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:onClick="pisos"
        android:id="@+id/pisosSobrePisos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/piso" />

        <TextView
            android:id="@+id/pisos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Pisos, sobrepisos, lozas y tejas"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:background="#DAD5D5"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp" />

    <LinearLayout
        android:onClick="paredes"
        android:id="@+id/paredes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/paredes"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Paredes y Soportes"
            android:textSize="15sp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:background="#DAD5D5"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="1dp" />

    <LinearLayout
        android:onClick="escaleras"
        android:id="@+id/escaleras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/escaleras"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Escaleras"
            android:textSize="15sp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>